<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RediTextInputLayout">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:textStyle" />
        <attr name="android:textColorHint" />
        <attr name="android:hint" />
        <attr name="android:tag" />
        <attr name="android:enabled" />
        <attr name="android:imeOptions" />
        <attr name="android:gravity" />
        <attr name="android:inputType" />
        <attr name="android:maxLength" />
        <attr name="android:maxLines" />
        <attr name="android:lines" />
        <attr name="hasError" />
        <attr name="kind">
            <flag name="date" value="0" />
            <flag name="spinner" value="1" />
            <flag name="amount" value="2" />
            <flag name="search" value="3" />
            <flag name="nic" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RediTextInputEditText">
        <attr name="android:textSize" format="dimension"/>
        <attr name="android:textColor" format="color"/>
    </declare-styleable>
</resources>